@model EditOfficerForm

@{
    Layout = "_Layout";
}

<h2>Edit officer</h2>

<form asp-action="Edit">
    

    <div class="form-group">
        <label asp-for="Surname" class="form-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control"/>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Birth" class="form-label">Birth</label>
        <input type="number" asp-for="Birth" class="form-control"/>
        <span asp-validation-for="Birth" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Death" class="form-label">Death</label>
        <input type="number" asp-for="Death" class="form-control"/>
        <span asp-validation-for="Death" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Kingdom" class="form-label">Kingdom</label>
        <input type="text" asp-for="Kingdom" class="form-control"/>
        <span asp-validation-for="Kingdom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bio" class="form-label">Bio</label>
        <input type="text" asp-for="Bio" class="form-control"/>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>